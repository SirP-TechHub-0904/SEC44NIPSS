@page
@model SEC44NIPSS.Pages.StudyParticipantsModel

@{
    ViewData["Title"] = "StudyParticipants";
}

<div class="rs-breadcrumbs img10">
    <div class="container">
        <div class="breadcrumbs-inner">
            <h1 class="page-title">
                @Model.Group.Title Participants
                <span class="watermark">Syndicate</span>
            </h1>
            <span class="sub-text">

            </span>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Team Section Start -->
<div class="rs-team style1 team-style1 pt-100 pb-100 md-pt-70 md-pb-70">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model.StudyGroupMemeber)
            {


<div class="col-lg-3 col-md-6 mb-30">

                    <div class="team-wrap">
                        <div class="image-wrap">
                            <a asp-page="/ProfileInformation" asp-route-id="@item.Profile.Id">
                                @if (String.IsNullOrEmpty(item.Profile.ParticipanPicture))
                                {
                                    <img src="~/img/emoji.jpg" alt="Team">
                                }
                                else
                                {
                                    <img src="assets/images/team/1.jpg" alt="Team">
                                }

                            </a>

                            <ul class="social-icons">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                        </div>
                        <div class="team-content">
                            <h3 class="team-name"><a asp-page="/ProfileInformation" asp-route-id="@item.Profile.Id">@item.Profile.Title @item.Profile.FullName.</a></h3>
                                <span class="team-title">[@item.Profile.Sponsor]</span><br />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<div class="row">
        @foreach (var x in ViewBag.NipssStaffList)
        {
            <div class="col-md-4">
                <div style="margin: 4px; box-shadow: 2px 1.6px 3.6px rgb(81 172 120), 2px 0px 2.9px rgb(81 172 120), 2px 0px 2.9px rgb(81 172 120), 2px 0px 2.9px rgb(81 172 120) ">
                    @if (!String.IsNullOrEmpty(x.Photo))
                    {

                        <div class="" style="height: 500px; background: url('@x.Photo'); background-repeat: no-repeat; background-size: cover;background-position: center; ">

                        </div>
                    }
                    else
                    {

                        <div class="" style="height: 500px; background: url('../img/adamm.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center; ">

                        </div>
                    }
                    <div class="card-body" style="padding: 5px; height: 70px; background-color: #52ad79; color: white;">

                        <h6 class="card-title text-center uppercase" style="font-size:15px;font-weight:900;color:#fff;">@x.Fullname</h6>
                        <h6 class="card-title text-center uppercase" style="font-size: 12px; color: #fff;">
                            @x.Position
                        </h6>

                    </div>
                </div>
            </div>

        }
    </div>
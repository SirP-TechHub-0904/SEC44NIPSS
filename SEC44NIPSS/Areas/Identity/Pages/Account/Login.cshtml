@page
@model LoginModel

@{
    ViewData["Title"] = "SEC 44 - THE NATIONAL INSTITUTE";
    Layout = "/Pages/Shared/_Login.cshtml";
}


            


            <h2 class="nm-tc nm-mb-1">Sign In</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger" style="font-weight:800;;text-align:center;"></div>
                @TempData["alert"]
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input id="inputEmail" asp-for="Input.Email" class="form-control" type="email" tabindex="1" placeholder="" required="required">
                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input id="inputPassword" asp-for="Input.Password" class="form-control" type="password" tabindex="2" placeholder="" required="">
                </div>

                <div class="d-flex nm-aic nm-jcb nm-mb-1 nm-mt-1">
                    <div class="nm-control nm-checkbox">
                        <input id="temsAndConditions" class="nm-control-input" asp-for="Input.RememberMe" type="checkbox">
                        <label class="nm-control-label" for="temsAndConditions">Remember me</label>
                    </div>

                   
                </div>
                <div class="d-flex nm-aic nm-jcb nm-mb-1 nm-mt-1">
                    <a class="nm-ft-b" asp-area="Identity" asp-page="/Account/RequestEmail">Don't Know My Login Details?</a>
                    <a class="nm-ft-b" asp-area="Identity" asp-page="/Account/ForgotPassword">Forgot password?</a>

                </div>
                    <button type="submit" class="btn btn-block btn-primary text-uppercase nm-btn">Log In</button>


            </form>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }

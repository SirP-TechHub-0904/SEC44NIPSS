@page
@model SEC44NIPSS.Areas.Admin.Pages.Team.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Executive</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Executive.Position" class="control-label"></label>
                <input asp-for="Executive.Position" class="form-control" />
                <span asp-validation-for="Executive.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Executive.SortOrder" class="control-label"></label>
                <input asp-for="Executive.SortOrder" class="form-control" />
                <span asp-validation-for="Executive.SortOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Image(650 by 650)</label>
                <div class="">
                    <input class="form-control" type="file" accept="image/*" capture="capture" name="filesPhoto" id="gallery-photo-add" />
                    <div class="gallery"></div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Executive.Manifesto" class="control-label"></label>
                <textarea id="mytextarea" asp-for="Executive.Manifesto" class="form-control"></textarea>
                <span asp-validation-for="Executive.Manifesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

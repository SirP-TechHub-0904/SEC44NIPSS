@page
@model SEC44NIPSS.Areas.Admin.Pages.GalleryPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Gallery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Gallery.Id" />
            <div class="form-group">
                <label asp-for="Gallery.Title" class="control-label"></label>
                <input asp-for="Gallery.Title" class="form-control" />
                <span asp-validation-for="Gallery.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gallery.FilePath" class="control-label"></label>
                <input asp-for="Gallery.FilePath" class="form-control" />
                <span asp-validation-for="Gallery.FilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Gallery.DontShow" /> @Html.DisplayNameFor(model => model.Gallery.DontShow)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model SEC44NIPSS.Areas.Admin.Pages.SliderPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">
        </h3>  
        <a asp-page="Create" class="btn btn-primary">Create New</a>

    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>S/N</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Slider[0].Title)
                    </th>
                    <th>
                        Slider
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Slider[0].Show)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Slider[0].Sort)
                    </th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            @{ int sn = 0;}
            <tbody>
                @foreach (var item in Model.Slider)
                {
                <tr>
                    <td>
                        @{ sn++;}

                        @sn
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <img src="@item.ImagePath" style="max-height:100px;" class="img-responsive" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Show)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sort)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SliderCategory.Name)
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete">
                            <input type="hidden" asp-for="SliderId" value="@item.Id" />
                            <input type="submit" value="Delete" class="btn btn-default" />
                        </form>
                        <form method="post" asp-page-handler="Show">
                            <input type="hidden" asp-for="SliderId" value="@item.Id" />
                            <input type="submit" value="Show/Dont Show" class="btn btn-default" />
                        </form>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>        </div>
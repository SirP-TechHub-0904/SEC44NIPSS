@page
@model SEC44NIPSS.Areas.Admin.Pages.Setting.IndexModel
@{
}



<div class="box">
    <div class="box-header">
        <h3 class="box-title">
        </h3>
        <a asp-page="Create" class="btn btn-primary">Create New</a>

    </div>
    <!-- /.box-header -->
    <div class="box-body table-responsive">
        <table id="example1" class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>S/N</th>
                    <th>
                        Email
                    </th>
                    <th>
                        PX
                    </th>
                    <th>
                        Count
                    </th>
                    <th>
                        Date Start
                    </th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>
            @{ int sn = 0;}
            <tbody>
                @foreach (var item in Model.EmailSettings)
                {
                <tr>
                    <td>
                        @{ sn++;}

                        @sn
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SenderEmail)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.PX)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>

                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
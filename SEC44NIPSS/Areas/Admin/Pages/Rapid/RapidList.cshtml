@page
@model SEC44NIPSS.Areas.Admin.Pages.Rapid.RapidListModel

@{
    ViewData["Title"] = "Index";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">
            Rapid Test List
            <a asp-page="RapidCompose" style="float:right;" class="btn btn-primary">Create New Test For All</a>
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>
                        Profile
                    </th>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Score</th>
                    <th></th>
                </tr>
            </thead>
            @{
                int sno = 0;
            }
            <tbody>
                @foreach (var item in Model.UserAnswer)
                {
                    <tr>
                        <td>
                            @{ sno++; }
                            @sno
                        </td>
                        <td style="word-break:break-all;">
                            @Html.DisplayFor(modelItem => item.Profile.FullName)
                        </td>
                        <td style="word-break:break-all;">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td style="word-break:break-all;">
                            @Html.DisplayFor(modelItem => item.Date.Date)
                        </td>
                        <td style="word-break:break-all;">
                            @Html.DisplayFor(modelItem => item.Score)
                        </td>

                        <td>
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

@page
@model SEC44NIPSS.Areas.Admin.Pages.Doc.DocList.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">
            Document List
            <a asp-page="Create" style="float:right;">Create New</a>
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Document[0].Title)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Document[0].Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Document[0].DocumentCategory)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Document[0].Profile)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Document[0].DocType)
                    </th>
                    <th></th>
                </tr>
            </thead>  @{
                int sno = 0;
            }
            <tbody>
                @foreach (var item in Model.Document)
                {
                    <tr>
                        <td>
                            @{ sno++; }
                            @sno
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentCategory.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Profile.FullName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DocType)
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-danger">Action</button>
                                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a asp-page="./Edit" asp-route-id="@item.Id">Edit</a></li>
                                    <li><a asp-page="./Details" asp-route-id="@item.Id">Details</a></li>

                                </ul>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
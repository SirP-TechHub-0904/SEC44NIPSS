@page
@model SEC44NIPSS.Areas.Admin.Pages.EventManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}




<div class="box">
    <div class="box-header">
        <h3 class="box-title">
            Document List
            <a asp-page="Create" style="float:right;">Create New</a>
        </h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>S/N</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].Date)
                    </th>
                    <th>
                        Event Date
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].Moderator)
                    </th>
                    <th>Lecturer</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].EventType)
                    </th>


                    <th></th>
                </tr>
            </thead>
            @{
                int sno = 0;
            }
            <tbody>
                @foreach (var item in Model.Event)
                {
                    <tr>
                        <td>
                            @{ sno++; }
                            @sno
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventDate)
                            @Html.DisplayFor(modelItem => item.EventTime)
                        </td>
                        <td style="word-break:break-all;">
                            @Html.Raw(item.Content)
                            @if (item.IsLecture == true)
                            {
                                <a asp-page="./IsLecture" asp-route-id="@item.Id" target="_blank" class="btn btn-danger">Is Not Lecture</a>
                            }
                            else
                            {
                                <a asp-page="./IsLecture" asp-route-id="@item.Id" target="_blank">Is Lecture</a>
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Moderator)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lecturer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventType)
                        </td>

                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@page
@model SEC44NIPSS.Areas.Admin.Pages.EventManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.Date" class="control-label"></label>
                <input asp-for="Event.Date" class="form-control" />
                <span asp-validation-for="Event.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventDate" class="control-label"></label>
                <input asp-for="Event.EventDate" class="form-control" />
                <span asp-validation-for="Event.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventTime" class="control-label"></label>
                <input asp-for="Event.EventTime" class="form-control" />
                <span asp-validation-for="Event.EventTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.SortOrder" class="control-label"></label>
                <input asp-for="Event.SortOrder" class="form-control" />
                <span asp-validation-for="Event.SortOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Title" class="control-label"></label>
                <input asp-for="Event.Title" class="form-control" />
                <span asp-validation-for="Event.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Content" class="control-label"></label>
                <textarea id="summernote" asp-for="Event.Content" class="form-control"></textarea>
                <span asp-validation-for="Event.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Moderator" class="control-label"></label>
                <input asp-for="Event.Moderator" class="form-control" />
                <span asp-validation-for="Event.Moderator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Lecturer" class="control-label"></label>
                <input asp-for="Event.Lecturer" class="form-control" />
                <span asp-validation-for="Event.Lecturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventType" class="control-label"></label>
                @Html.DropDownListFor(model => model.Event.EventType, new SelectList(Enum.GetValues(typeof(SEC44NIPSS.Data.Model.EventType))), new { @class = "form-control" })
                <span asp-validation-for="Event.EventType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.ContentStatus" class="control-label"></label>
                @Html.DropDownListFor(model => model.Event.ContentStatus, new SelectList(Enum.GetValues(typeof(SEC44NIPSS.Data.Model.ContentStatus))), new { @class = "form-control" })

                <span asp-validation-for="Event.ContentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.ContentType" class="control-label"></label>
                @Html.DropDownListFor(model => model.Event.ContentType, new SelectList(Enum.GetValues(typeof(SEC44NIPSS.Data.Model.ContentType))), new { @class = "form-control" })

                <span asp-validation-for="Event.ContentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Note" class="control-label"></label>
                <textarea id="mytextarea" asp-for="Event.Note" class="form-control"></textarea>
                <span asp-validation-for="Event.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.IsLecture" class="control-label">Click if its Lecture to indicate lecture note for download</label>
                <input asp-for="Event.IsLecture" class="form-control" />
                <span asp-validation-for="Event.IsLecture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model SEC44NIPSS.Areas.Admin.Pages.ProfileAccount.UpdateUserPermissionModel
@{
}
<div class="row">
    <div class="col-md-12">

        <div class="box">
            <div class="box-header">

                <h3 class="box-title">
                    User Permissions (@Model.Fullname)
                </h3>
            </div>
            <div class="box-body">
                <div class="">
                    @foreach (var i in Model.UserRoles)
                    {
                        <button class="btn btn-primary">
                            @i
                        </button>
                    }
                </div>
                <hr />
                <div class="">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Click to Remove Permision</h6>
                            @foreach (var i in Model.UserRoles)
                            {
                                @await Component.InvokeAsync("RoleData", new { name = i, Userid = Model.UserInfo.Id, syle = "danger", fullname = Model.Fullname })
                            }
                        </div>
                        <div class="col-md-6">
                            <h6>Click to Add Permision</h6>
                            @foreach (var i in Model.RemainingUserRoles)
                            {
                                @await Component.InvokeAsync("RoleData", new { name = i, Userid = Model.UserInfo.Id, syle = "warning", fullname = Model.Fullname })

                            }
                        </div>
                    </div>
                   
                   
                </div>
            </div>
        </div>
    </div>
</div>
@page
@model SEC44NIPSS.Areas.Admin.Pages.ProfileAccount.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Profile</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Profile.Id" />
            <input type="hidden" asp-for="Profile.AboutProfile" />
            <input type="hidden" asp-for="Profile.ParticipanPicture" />
            <input type="hidden" asp-for="Profile.ParticipantPhoto" />
            <input type="hidden" asp-for="Profile.StateOfOrigin" />
            <input type="hidden" asp-for="Profile.LGA" />
            <input type="hidden" asp-for="Profile.PXI" />
            <input type="hidden" asp-for="Profile.ResidenceAddress" />
            <input type="hidden" asp-for="Profile.ShortProfile" />
            <input type="hidden" asp-for="Profile.ProfileUpdateFirstTime" />
            <input type="hidden" asp-for="Profile.ProfileUpdatePictureFirstTime" />
            <input type="hidden" asp-for="Profile.AboutProfile" />
            <input type="hidden" asp-for="Profile.IsParticipant" />
            <input type="hidden" asp-for="Profile.ProfilePhoto" />
            <input type="hidden" asp-for="Profile.DateRegistered" />

            <div class="form-group">
                <label asp-for="Profile.UserId" class="control-label"></label>
                <select asp-for="Profile.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Profile.UserId" class="text-danger"></span>
            </div>
            <h4>Old email @Model.Profile.User.Email</h4>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Title" class="control-label"></label>
                <input asp-for="Profile.Title" class="form-control" />
                <span asp-validation-for="Profile.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.OfficeAddress" class="control-label"></label>
                <input asp-for="Profile.OfficeAddress" class="form-control" />
                <span asp-validation-for="Profile.OfficeAddress" class="text-danger"></span>
            </div>
            @if (Model.Profile.StudyGroupMemeber != null)
            {
                <h4>Study Group: @Model.Profile.StudyGroupMemeber.StudyGroup.Title</h4>
            }
            <div class="form-group">
                <label class="control-label"></label>
                <select asp-for="StudyGroupId" class="form-control" asp-items="ViewBag.StudyGroupId">
                    <option>None</option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="Profile.FullName" class="control-label"></label>
                <input asp-for="Profile.FullName" class="form-control" />
                <span asp-validation-for="Profile.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.DOB" class="control-label"></label>
                <input asp-for="Profile.DOB" class="form-control" />
                <span asp-validation-for="Profile.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@Model.Profile.AboutProfile" height="100" />
            </div>
            <div class="form-group">
                <label asp-for="Profile.Gender" class="control-label"></label>
                <select asp-for="Profile.Gender" class="form-control">

                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>                <span asp-validation-for="Profile.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.AccountRole" class="control-label"></label>
                <select asp-for="Profile.AccountRole" class="form-control">
                    <option value="Participant">Participant</option>
                    <option value="Staff">Staff</option>
                </select>                <span asp-validation-for="Profile.AccountRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.OfficialRole" class="control-label"></label>
                <input asp-for="Profile.OfficialRole" class="form-control" />
                <span asp-validation-for="Profile.OfficialRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.Sponsor" class="control-label"></label>
                <input asp-for="Profile.Sponsor" class="form-control" />
                <span asp-validation-for="Profile.Sponsor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.PhoneNumber" class="control-label"></label>
                <input asp-for="Profile.PhoneNumber" class="form-control" />
                <span asp-validation-for="Profile.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.AltPhoneNumber" class="control-label"></label>
                <input asp-for="Profile.AltPhoneNumber" class="form-control" />
                <span asp-validation-for="Profile.AltPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.PsNumber" class="control-label"></label>
                <input asp-for="Profile.PsNumber" class="form-control" />
                <span asp-validation-for="Profile.PsNumber" class="text-danger"></span>
            </div>  <div class="form-group">
                <label asp-for="Profile.PsChange" class="control-label"></label>
                <input asp-for="Profile.PsChange" />
                <span asp-validation-for="Profile.PsChange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.DontShow" class="control-label"></label>
                <input asp-for="Profile.DontShow" />
                <span asp-validation-for="Profile.DontShow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profile.AlumniId" class="control-label"></label>
                <select asp-for="Profile.AlumniId" class="form-control" required="required" asp-items="ViewBag.AlumniId">
                    <option>None</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

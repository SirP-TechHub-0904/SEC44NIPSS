@page
@model SEC44NIPSS.Areas.Admin.Pages.ProfileAccount.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1></h1>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">
            All Users (@Model.Profile.Count())
            <a asp-page="Create" class="btn btn-primary float-right" style="float:right;">Create New</a>
        </h3>
        <h6>Staff: @Model.Staff</h6>
        <h6>Participant: @Model.Participant</h6>
        <h6>Directing Staff: @Model.DS</h6>
        <h6>Management Staff: @Model.MS</h6>

    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div class="table-responsive">

            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>

                        <th>S/N</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Profile[0].User)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Profile[0].Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Profile[0].FullName)
                        </th>
                        <th>Role</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Profile[0].PhoneNumber)
                        </th>

                        <th>Position</th>
                        <th>Status</th>
                        <th>Group</th>
                        <th>Photo</th>
                        <th>C Pass</th>
                        <th></th>
                    </tr>
                </thead>
                @{
                    int sno = 0;
                }

                <tbody>
                    @foreach (var item in Model.Profile)
                    {
                    <tr>
                        <td>
                            @{ sno++; }
                            @sno
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.User.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title) @Html.DisplayFor(modelItem => item.FullName)

                        </td>
                        <td> @Html.DisplayFor(modelItem => item.Roles)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfficialRoleStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudyGroupMemeber.StudyGroup.Title)
                        </td>
                        <td>
                            <img src="@item.AboutProfile" height="100" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PsChange)
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-danger">Action</button>
                                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a asp-page="./ResetPassword" asp-route-id="@item.UserId">Reset Password</a></li>
                                    <li><a asp-page="./Edit" asp-route-id="@item.Id">Edit</a></li>
                                    <li><a asp-page="./Details" asp-route-id="@item.Id">Details</a></li>
                                    <li><a asp-page="./Upload" asp-route-id="@item.Id">Upload</a></li>
                                    <li><a asp-page="./SendMail" asp-route-id="@item.Id">Email Send</a></li>

                                </ul>
                            </div>

                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@page
@model SEC44NIPSS.Areas.Admin.Pages.MessagingPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Message</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.Recipient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.Recipient)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.Retries)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.Retries)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.NotificationStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.NotificationStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.NotificationType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message.NotificationType)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Message.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>


    <form method="post" asp-page-handler="Newdelete">
        <input type="number" asp-for="Number" placeholder="number to delete" />
        <input type="hidden" asp-for="Message.Id" />
        <input type="submit" value="Delete many" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>



    <form method="post" asp-page-handler="Resettozero">
        <input type="submit" value="Reset" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

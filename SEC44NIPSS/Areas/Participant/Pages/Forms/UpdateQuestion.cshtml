                                        <div class="form-group">
                                            <label for="inputEmail3" class="control-label">Select @Model.Option.Yes or @Model.Option.No</label>

                                        </div>
                                        <div class="form-group">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox">
                                                    <input type="text" asp-for="Option.Yes">

                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox">
                                                    <input type="text" asp-for="Option.No">
                                                </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3" class="control-label">you can change the yes/no to true/false or anyother text.</label>

                                        </div>
                                    }
                                    else if (Model.Option.OptionType == SEC44NIPSS.Data.Model.OptionType.LongNote)
                                    {
                                        <div class="form-group">
                                            <div class="">
                                                <textarea class="form-control" id="inputEmail3" placeholder="Your Answer" maxlength="@Model.Option.LongNoteMaximumLength"></textarea>
                                            </div>
                                        </div>

                                    }
                                    else if (Model.Option.OptionType == SEC44NIPSS.Data.Model.OptionType.ShortNote)
                                    {
                                        <div class="form-group">
                                            <div class="">
                                                <input class="form-control" id="inputEmail3" placeholder="Your Answer" />
                                            </div>
                                        </div>
                                    }
                                    else if (Model.Option.OptionType == SEC44NIPSS.Data.Model.OptionType.FiveOption)
                                    {
                                        <div class="form-group">
                                            <label for="inputEmail3" class="control-label">Five Options</label>

                                            <div class="">
                                                <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList1" placeholder="Option One">
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <div class="">
                                                <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList2" placeholder="Option Two">
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <div class="">
                                                <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList3" placeholder="Option Three">
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <div class="">
                                                <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList4" placeholder="Option Four">
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <div class="">
                                                <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList5" placeholder="Option Five">
                                            </div>
                                        </div>
                                    }
                                    else if (Model.Option.OptionType == SEC44NIPSS.Data.Model.OptionType.FourOption)
                                    {
                                        <div class="form-group">
                                            <label for="inputEmail3" class="control-label">Four Options</label>

                                            <div class="">
                                                <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList1" placeholder="Option One">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="">
                                                <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList2" placeholder="Option Two">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="">
                                                <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList3" placeholder="Option Three">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="">
                                                <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList4" placeholder="Option Four">
                                            </div>
                                        </div>
                                    }
                                    else if (Model.Option.OptionType == SEC44NIPSS.Data.Model.OptionType.MultipleOption)
                                    {
                                        <div class="form-group">
                                            <label for="inputEmail3" class="control-label">Select Multiple Options</label>

                                        </div>
                                        <div class="form-group">
                                            <div class="">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox">
                                                        <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption1" placeholder="Checkbox One">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox">
                                                        <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption2" placeholder="Checkbox Two">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox">
                                                        <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption3" placeholder="Checkbox Three">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox">
                                                        <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption4" placeholder="Checkbox Four">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox">
                                                        <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption5" placeholder="Checkbox Five">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox">
                                                        <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption6" placeholder="Checkbox Six">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                                <div>
                                    <div class="box-body">
                                        <h4>Select to change option type below.</h4>
                                        <div class="form-group">
                                            <select id="OptionChange" asp-for="OptionsChoose" class="form-control">
                                                <option value="">-- Select an Option --</option>

                                                <option value="YesNoOption">Yes No Option</option>
                                                <option value="LongNoteOption">Long Note Option</option>
                                                <option value="ShortNoteOption">Short Note Option</option>
                                                <option value="FiveOption">Five Option</option>
                                                <option value="FourOption">Four Option</option>
                                                <option value="MultipleOption">Multiple Option Selection</option>

                                            </select>
                                        </div>
                                        <div id="YesNoOption">
                                            <div class="form-group">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox">
                                                        <input type="text" asp-for="Option.Yes">

                                                    </label>

                                                    <br />
                                                    <br />
                                                    <label>
                                                        <input type="checkbox" asp-for="Option.No">
                                                        <input type="text" asp-for="Option.Yes">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="LongNoteOption">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="control-label">Long Note</label>

                                                <div class="">
                                                    <textarea type="text" class="form-control" id="inputEmail3"  placeholder="Your Answer"></textarea>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <div id="ShortNoteOption">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="control-label">Short Note</label>

                                                <div class="">
                                                    <input type="text" class="form-control" placeholder="Your Answer">
                                                </div>
                                            </div>
                                           
                                        </div>
                                        <div id="FiveOption">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="control-label">Five Options</label>

                                                <div class="">
                                                    <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList1" placeholder="Option One">
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                <div class="">
                                                    <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList2" placeholder="Option Two">
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                <div class="">
                                                    <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList3" placeholder="Option Three">
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                <div class="">
                                                    <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList4" placeholder="Option Four">
                                                </div>
                                            </div>
                                            <div class="form-group">

                                                <div class="">
                                                    <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList5" placeholder="Option Five">
                                                </div>
                                            </div>
                                        </div>
                                        <div id="FourOption">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="control-label">Five Options</label>

                                                <div class="">
                                                    <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList1" placeholder="Option One">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="">
                                                    <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList2" placeholder="Option Two">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="">
                                                    <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList3" placeholder="Option Three">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="">
                                                    <input type="text" class="form-control" id="inputEmail3" asp-for="Option.OptionList4" placeholder="Option Four">
                                                </div>
                                            </div>
                                        </div>

                                        <div id="MultipleOption">
                                            <div class="form-group">
                                                <div class="">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox">
                                                            <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption1" placeholder="Checkbox One">
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox">
                                                            <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption2" placeholder="Checkbox Two">
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox">
                                                            <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption3" placeholder="Checkbox Three">
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="">
                                                    <div class="checkbox">
                                                        <label>
                                                            <input type="checkbox">
                                                            <input type="text" class="form-control" id="inputEmail3" asp-for="Option.MultipleOption4" placeholder="Checkbox Four">
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="">
                                                    <div class="checkbox">

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



        <script>

            document.getElementById('YesNoOption').style.display = "none";
            document.getElementById('LongNoteOption').style.display = "none";
            document.getElementById('ShortNoteOption').style.display = "none";
            document.getElementById('FiveOption').style.display = "none";
            document.getElementById('FourOption').style.display = "none";
            document.getElementById('MultipleOption').style.display = "none";



            document.getElementById('OptionChange').addEventListener('change', function () {
                var style = this.value == "YesNoOption" ? 'block' : 'none';
                document.getElementById('YesNoOption').style.display = style;
            });

            document.getElementById('OptionChange').addEventListener('change', function () {
                var style = this.value == "LongNoteOption" ? 'block' : 'none';
                document.getElementById('LongNoteOption').style.display = style;
            });

            document.getElementById('OptionChange').addEventListener('change', function () {
                var style = this.value == "ShortNoteOption" ? 'block' : 'none';
                document.getElementById('ShortNoteOption').style.display = style;
            });

            document.getElementById('OptionChange').addEventListener('change', function () {
                var style = this.value == "FiveOption" ? 'block' : 'none';
                document.getElementById('FiveOption').style.display = style;
            });

            document.getElementById('OptionChange').addEventListener('change', function () {
                var style = this.value == "FourOption" ? 'block' : 'none';
                document.getElementById('FourOption').style.display = style;
            });
            document.getElementById('OptionChange').addEventListener('change', function () {
                var style = this.value == "MultipleOption" ? 'block' : 'none';
                document.getElementById('MultipleOption').style.display = style;
            });


        </script>

    }


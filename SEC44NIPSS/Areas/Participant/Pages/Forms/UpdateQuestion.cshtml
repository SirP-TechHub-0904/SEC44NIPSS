                                    <div class="form-group">
                                        @if (!String.IsNullOrEmpty(Model.Question.ImageUrl))
                                        {
                                            <img src="@Model.Question.ImageUrl" class="img-fluid" style="max-height:200px;" />
                                        }
                                        <br />
                                        @if (!String.IsNullOrEmpty(Model.Question.ImageUrl))
                                        {


                                            <label for="inputEmail3" class="control-label">Update or Change Image</label>
                                        }
                                        else
                                        {
                                            <label for="inputEmail3" class="control-label">Upload Image</label>

                                        }

                                        <div class="">
                                            <input type="file" class="form-control" name="FileQuestion">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="control-label">Question</label>

                                        <div class="">

                                            <textarea asp-for="Question.Title" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="box-body">
                                    @if (Model.Option.OptionType == SEC44NIPSS.Data.Model.OptionType.YesNo)

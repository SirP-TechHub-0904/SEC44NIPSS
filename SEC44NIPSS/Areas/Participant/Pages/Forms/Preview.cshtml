@page
@model SEC44NIPSS.Areas.Participant.Pages.Forms.PreviewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>THE NATIONAL INSTITUTE (SEC 44) - @Model.QuestionnerList.Title</title>
    <meta property="og:site_name" content="@Model.QuestionnerList.Title">
    <meta property="og:title" content="@Model.QuestionnerList.Title" />
    <meta property="og:description" content="@Model.QuestionnerList.Description" />
    <meta property="og:type" content="website" />
    <meta property="og:updated_time" content="@DateTime.UtcNow.AddHours(1)" />

    @if (String.IsNullOrEmpty(Model.QuestionnerList.PreviewImage))
    {
        <meta property="og:image" itemprop="image" content="https://sec44nipss.com/bgdefault.jpg">
        <link rel="shortcut icon" href="https://sec44nipss.com/img/icon-sec44.png">
    }
    else
    {
        <meta property="og:image" itemprop="image" content="https://sec44nipss.com/@Model.QuestionnerList.PreviewImage">
        <link rel="shortcut icon" href="https://sec44nipss.com/@Model.QuestionnerList.PreviewImage">
    }

    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/dashboard/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/dashboard/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/dashboard/bower_components/Ionicons/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/dashboard/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dashboard/dist/css/AdminLTE.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/dashboard/dist/css/skins/_all-skins.min.css">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-X0CM3VESSW"></script>




</head>
<body class="">
    <style>
        .btn-h {
            display: inline-block;
            padding: 3px 5px;
            margin-bottom: 0;
            font-size: 10px;
            margin-right: 5px;
        }

        .nav-tabs-custom {
            margin-bottom: 20px;
            background: #f0ebf8;
            box-shadow: 0 1px 1px rgb(0 0 0 / 10%);
            border-radius: 3px;
        }

            .nav-tabs-custom > .tab-content {
                background: #f0ebf8;
                padding: 10px;
            }

        .dropdown-menu {
            box-shadow: none;
            border-color: #eee0;
        }
    </style>
    <div class="row">
        <div class="box-body" style="background-color: #f0ebf8;" id="test">

            <div class="col-md-12">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    @if (String.IsNullOrEmpty(Model.QuestionnerList.PreviewImage))
                    {


                        <div class="box-header" style="background-color: #f3f2f0; background-image: url('https://sec44nipss.com/bgdefault.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center;height:120px;">

                        </div>
                    }
                    else
                    {
                        <div class="box-header" style="background-color: #f3f2f0; background-image: url('https://sec44nipss.com/@Model.QuestionnerList.PreviewImage'); background-repeat: no-repeat; background-size: cover; background-position: center;height:120px;">

                        </div>
                    }

                    <div class="box-body" style="background-color: #ffffff;">
                        <h3 style="font-weight:900;">@Model.QuestionnerList.Title</h3>
                        @if (!String.IsNullOrEmpty(Model.QuestionnerList.Description))
                        {
                            <hr style="margin-top: 3px; margin-bottom: 3px;" />
                            @Html.Raw(Model.QuestionnerList.Description)
                        }
                        @if (!String.IsNullOrEmpty(Model.QuestionnerList.Instruction))
                        {<hr style="margin-top: 3px; margin-bottom: 3px;" />
                            @Html.Raw(Model.QuestionnerList.Instruction)
                        }
                    </div>
                    <form method="post">
                       

                        <div class="box-body" style="background-color: #f3f2f0; border: 4px solid #ffffff;">
                            <input type="hidden" name="QuestionnnerId" value="@Model.QuestionnerList.Id" />
                            <div class="col-md-12" style="margin-top:15px;">
                                @if (Model.QuestionnerList.Email == SEC44NIPSS.Data.Model.EmailPhoneStatus.Optional)
                                {
                                    <div class="col-md-12" style="font-size:19px;padding-left:0px;">
                                        <div class="form-group">
                                            <label for="inputEmail3" class="control-label">Email (Optional)</label>

                                            <div class="">
                                                <input type="email" name="Email" class="form-control" placeholder="Email">
                                            </div>
                                        </div>
                                    </div>
                                }
                                else if (Model.QuestionnerList.Email == SEC44NIPSS.Data.Model.EmailPhoneStatus.Required)
                                {
                                    <div class="col-md-12" style="font-size:19px;padding-left:0px;">
                                        <div class="form-group">
                                            <label for="inputEmail3" class="control-label">Email</label>

                                            <div class="">
                                                <input type="email" name="Email" class="form-control" placeholder="Email" required="required">
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (Model.QuestionnerList.PhoneNumber == SEC44NIPSS.Data.Model.EmailPhoneStatus.Optional)
                                {
                                    <div class="col-md-12" style="font-size:19px;padding-left:0px;">
                                        <div class="form-group">
                                            <label for="inputEmail3" class="control-label">Phone (Optional)</label>

                                            <div class="">
                                                <input type="text" name="Phone" class="form-control" placeholder="Phone">
                                            </div>
                                        </div>
                                    </div>
                                }
                                else if (Model.QuestionnerList.PhoneNumber == SEC44NIPSS.Data.Model.EmailPhoneStatus.Required)
                                {
                                    <div class="col-md-12" style="font-size:19px;padding-left:0px;">
                                        <div class="form-group">
                                            <label for="inputEmail3" class="control-label">Phone</label>

                                            <div class="">
                                                <input type="text" name="Phone" class="form-control" placeholder="Phone" required="required">
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>

                            @foreach (var x in Model.QuestionnerList.Questions.OrderBy(x => x.Number))
                            {
                                <input type="hidden" name="Question-@x.Id" value="@x.Id" />
                                <div style="background-color:#ffffff;margin-bottom:5px;border-radius:5px;padding:10px 20px;">
                                    <div class="row">
                                        <div class="col-md-12" style="font-size:22px;">
                                            @if (!String.IsNullOrEmpty(x.ImageUrl))
                                            {
                                                <div style="text-align:center;margin:0 auto !important;">
                                                    <img src="@x.ImageUrl" class="img-fluid" style="max-height: 150px; text-align: center; margin: 0 auto !important;" />
                                                </div>
                                            }
                                            <br />
                                            (@x.Number) @x.Title

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12" style="margin-top:15px;">
                                            @if (x.Options != null)
                                            {
                                                if (x.Options.OptionType == SEC44NIPSS.Data.Model.OptionType.FourOption)
                                                {
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList1))
                                                    {
                                                        <div class="col-md-6" style="font-size:19px;padding-left:0px;">
                                                            <input type="radio" name="FourOption-@x.Id" value="@x.Options.OptionList1" /> @x.Options.OptionList1
                                                        </div>
                                                    }
                                                    @if (!String.IsNullOrEmpty(x.Options.OptionList2))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FourOption-@x.Id" value="@x.Options.OptionList2" /> @x.Options.OptionList2
                                                        </div>
                                                    }
                                                    @if (!String.IsNullOrEmpty(x.Options.OptionList3))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FourOption-@x.Id" value="@x.Options.OptionList3" /> @x.Options.OptionList3
                                                        </div>
                                                    }
                                                    @if (!String.IsNullOrEmpty(x.Options.OptionList4))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FourOption-@x.Id" value="@x.Options.OptionList4" /> @x.Options.OptionList4
                                                        </div>
                                                    }
                                                }
                                                else if (x.Options.OptionType == SEC44NIPSS.Data.Model.OptionType.FiveOption)
                                                {
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList1))
                                                    {
                                                        <div class="col-md-6" style="font-size:19px;padding-left:0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList1" /> @x.Options.OptionList1
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList2))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList2" /> @x.Options.OptionList2
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList3))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList3" /> @x.Options.OptionList3
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList4))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList4" /> @x.Options.OptionList4
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList5))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList5" /> @x.Options.OptionList5
                                                        </div>
                                                    }

                                                    if (!String.IsNullOrEmpty(x.Options.OptionList6))
                                                    {
                                                        <div class="col-md-6" style="font-size:19px;padding-left:0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList6" /> @x.Options.OptionList6
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList7))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList7" /> @x.Options.OptionList7
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList8))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList8" /> @x.Options.OptionList8
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList9))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList9" /> @x.Options.OptionList9
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.OptionList10))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="FiveOption-@x.Id" value="@x.Options.OptionList10" /> @x.Options.OptionList10
                                                        </div>
                                                    }
                                                }
                                                else if (x.Options.OptionType == SEC44NIPSS.Data.Model.OptionType.MultipleOption)
                                                {
                                                    if (!String.IsNullOrEmpty(x.Options.MultipleOption1))
                                                    {
                                                        <div class="col-md-6" style="font-size:19px;padding-left:0px;">
                                                            <input type="radio" name="MultipleOption1-@x.Id" value="@x.Options.MultipleOption1" /> @x.Options.MultipleOption1
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.MultipleOption2))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="MultipleOption2-@x.Id" value="@x.Options.MultipleOption2" /> @x.Options.MultipleOption2
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.MultipleOption3))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="MultipleOption3-@x.Id" value="@x.Options.MultipleOption3" /> @x.Options.MultipleOption3
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.MultipleOption4))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="MultipleOption4-@x.Id" value="@x.Options.MultipleOption4" /> @x.Options.MultipleOption4
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.MultipleOption5))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="MultipleOption5-@x.Id" value="@x.Options.MultipleOption5" /> @x.Options.MultipleOption5
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.MultipleOption6))
                                                    {
                                                        <div class="col-md-6" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="MultipleOption6-@x.Id" value="@x.Options.MultipleOption6" /> @x.Options.MultipleOption6
                                                        </div>
                                                    }

                                                }
                                                else if (x.Options.OptionType == SEC44NIPSS.Data.Model.OptionType.YesNo)
                                                {
                                                    if (!String.IsNullOrEmpty(x.Options.Yes))
                                                    {
                                                        <div class="col-md-12" style="font-size:19px;padding-left:0px;">
                                                            <input type="radio" name="YesNo-@x.Id" value="@x.Options.Yes" /> @x.Options.Yes
                                                        </div>
                                                    }
                                                    if (!String.IsNullOrEmpty(x.Options.No))
                                                    {
                                                        <div class="col-md-12" style="font-size: 19px; padding-left: 0px;">
                                                            <input type="radio" name="YesNo-@x.Id" value="@x.Options.No" /> @x.Options.No
                                                        </div>
                                                    }
                                                }
                                                else if (x.Options.OptionType == SEC44NIPSS.Data.Model.OptionType.ShortNote)
                                                {
                                                    <div class="col-md-12" style="font-size:19px;padding-left:0px;">

                                                        <input class="form-control" name="ShortNote-@x.Id" placeholder="Your answer" style="border-bottom: 1px solid black;" />

                                                    </div>
                                                }
                                                else if (x.Options.OptionType == SEC44NIPSS.Data.Model.OptionType.LongNote)
                                                {
                                                    <div class="col-md-12" style="font-size:19px;padding-left:0px;">

                                                        <textarea class="form-control" name="LongNote-@x.Id" placeholder="Your answer" style="border-bottom: 1px solid black;"></textarea>

                                                    </div>
                                                }

                                            }
                                        </div>
                                    </div>

                                </div>

                            }
                            <div style="background-color:#ffffff;margin-bottom:5px;border-radius:5px;padding:10px 20px;">

                                <input type="submit" value="Submit" class="btn btn-primary" />
                                <br />
                            </div>
                        </div>
                    </form>
                    <div class="box-header">

                        <p style="text-align:center;">Never submit passwords through NIPSS Forms.</p>
                        <p style="text-align:center;"> This content is neither created nor endorsed by NIPSS. <a asp-page="/ReportAbuse" target="_blank">Report Abuse</a> - <a asp-page="/Terms" target="_blank">Terms of Service</a> </p>

                        <br />
                        <h4 class="text-center">© 2022 <a href="https://sec44nipss.com/" target="_blank">THE NATIONAL INSTITUTE</a> - (SEC 44) FORMS</h4>
                    </div>


                </div>
                <!-- /.tab-content -->
            </div>
            <!-- nav-tabs-custom -->
        </div>

        <div class="clearfix"></div>

    </div>
</body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">


        function myFunction() {
            window.print();
        }


    </script>





}

@page
@model SEC44NIPSS.Areas.Participant.Pages.Forms.IndexModel
@{
    ViewData["Title"] = "Responsive";

}
<style>
    form.example input[type=text] {
        padding: 10px;
        font-size: 17px;
        border: 1px solid grey;
        float: left;
        width: 80%;
        background: #f1f1f1;
    }

    form.example button {
        float: left;
        width: 20%;
        padding: 10px;
        background: #2196F3;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none;
        cursor: pointer;
    }

        form.example button:hover {
            background: #0b7dda;
        }

    form.example::after {
        content: "";
        clear: both;
        display: table;
    }

    h6 {
        font-weight: 800;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header" style="background-color: #f3f2f0;">
                <form class="example" style="margin:auto;max-width:300px">
                    <input type="text" placeholder="Search.." name="search2">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>

            <div class="box-body" style="background-color: #f3f2f0;">
                <div class="btn-group" style="text-align: center; margin: 10px auto !important; display: flex; flex-direction: row; justify-content: center;">

                    <form style="display:inline;" method="post">
                        <input type="hidden" asp-for="ProfileId" />
                        <button type="submit" class="btn btn-default" style="margin-left:4px;height:120px;width:120px;text-align:center;">
                            <img src="~/img/plus.jpeg" style="height:100px;" />


                        </button>
                        <h6>
                            Empty
                        </h6>
                    </form>

                    <form style="display:inline;"  method="post" asp-page-handler="ContactForm">
                        <input type="hidden" asp-for="ProfileId" />
                        <button type="submit" class="btn btn-default" style="margin-left:4px;height:120px;width:120px;text-align:center;">
                            <img src="~/img/contactform.jpeg" style="height:100px;" />

                        </button>
                        <h6>
                            Contact Form
                        </h6>
                    </form>
                    <form style="display:inline;" method="post" asp-page-handler="RSVP">
                        <input type="hidden" asp-for="ProfileId" />

                        <button type="submit" class="btn btn-default" style="margin-left:4px;height:120px;width:120px;text-align:center;">
                            <img src="~/img/rsvp.jpeg" style="height:100px;" />

                        </button>
                        <h6>
                            RSVP
                        </h6>
                    </form>

                    <form style="display:inline;" method="post" asp-page-handler="PartyInvite">
                        <input type="hidden" asp-for="ProfileId" />

                        <button type="submit" class="btn btn-default" style="margin-left:4px;height:120px;width:120px;text-align:center;">
                            <img src="~/img/partyinvite.jpeg" style="height:100px;" />

                        </button>
                        <h6>
                            Party Invite
                        </h6>
                    </form>

                    <form style="display:inline;" method="post" asp-page-handler="Event">
                        <input type="hidden" asp-for="ProfileId" />

                        <button type="submit" class="btn btn-default" style="margin-left:4px;height:120px;width:120px;text-align:center;">
                            <img src="~/img/events.jpeg" style="height:100px;" />

                        </button>
                        <h6>
                            Event Registration
                        </h6>
                    </form>


                </div>
            </div>

            <div class="box-body">

                @if (Model.QuestionnerList.Count() > 0)
                {

                <div class="container">
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Success!</strong> @TempData["Updated"]
                        </div>
                    }
                    <div class="table-responsive">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <th>S/N</th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Closed
                                    </th>
                                    <th>
                                        Response
                                    </th>

                                </tr>
                            </thead>
                            @{
                                int sno = 0;
                            }

                            <tbody>
                                @foreach (var x in Model.QuestionnerList)
                                {

                                    <tr>
                                        <td>
                                            @{ sno++; }
                                            @sno
                                        </td>
                                        <td>
                                            <a asp-page="./FormMaker" asp-route-o="@x.ShortLink" asp-route-q="@x.LongLink">
                                                @Html.DisplayFor(modelItem => x.Title)
                                            </a>
                                        </td>
                                        <td>
                                            @if (x.Closed == true)
                                            {
                                                <span>True</span>
                                            }
                                            else
                                            {
                                                <span>False</span>
                                            }
                                        </td>
                                        <td>

                                            0
                                        </td>


                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                }

                else
                {

                <h4>You have no questionner record...</h4>
                }

            </div>
        </div>


    </div>
</div>
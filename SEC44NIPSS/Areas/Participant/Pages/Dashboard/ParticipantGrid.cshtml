@page
@model SEC44NIPSS.Areas.Participant.Pages.Dashboard.ParticipantGridModel

@{
    ViewData["Title"] = "ParticipantList";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">
            @Model.Profile.Count() PARTICIPANTS @if (Model.Gender != null)
            {<span>(@Model.Gender)</span>}
        </h3>
       
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>S/N</th>
                    <th>
                        Email
                    </th>
                    <th>
                        Fullname
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Profile[0].PhoneNumber)
                    </th>
                    <th>Photo</th>
                </tr>
            </thead>
            @{
                int sno = 0;
            }

            <tbody>
                @foreach (var item in Model.Profile)
                {
                    <tr>
                        <td>
                            @{ sno++; }
                            @sno
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.User.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)

                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            <img src="@item.AboutProfile" height="50" />
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@page
@model SEC44NIPSS.Areas.Participant.Pages.Dashboard.CreateTestModel

@{
    ViewData["Title"] = "CreateTest";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header">
                <h6 class="card-title">NEW TEST</h6>
            </div>

            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="UserAnswer.ProfileId" value="@Model.Profile.Id" hidden="hidden" />
                            <div class="form-group">
                                <label asp-for="UserAnswer.Title" class="control-label">Test Name (eg. Rapid Test One) </label>
                                <input asp-for="UserAnswer.Title" class="form-control" required="required" />
                                <span asp-validation-for="UserAnswer.Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Start" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }

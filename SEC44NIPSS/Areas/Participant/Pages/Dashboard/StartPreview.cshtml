@page
@model SEC44NIPSS.Areas.Participant.Pages.Dashboard.StartPreviewModel

@{
    ViewData["Title"] = "StartPreview";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header">
                <h6 class="box-title">TEST DETAILS</h6>
            </div>

            <div class="box-body">
                <div>

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.UserAnswer.Title)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UserAnswer.Title)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.UserAnswer.Date)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UserAnswer.Date)
                        </dd>

                        <dt>
                            Duration
                        </dt>
                        <dd>
                            5 min
                        </dd>

                    </dl>
                </div>
                <div>
                    <a asp-page="./StartTest" asp-route-id="@Model.UserAnswer.Id" class="btn btn-primary" style="width:100%;">Start Test</a>
                </div>
            </div>
        </div>
    </div>
</div>


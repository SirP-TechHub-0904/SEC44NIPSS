@page
@model SEC44NIPSS.Areas.Participant.Pages.Dashboard.UploadToGalleryModel
@{
}

<div class="box box-info">

    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Gallery.Title" class="control-label"></label>
                        <input asp-for="Gallery.Title" class="form-control" />
                        <span asp-validation-for="Gallery.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Image</label>
                        <input class="form-control" type="file" name="Gallery" id="gallery-photo-add" multiple="multiple" />
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Gallery.UseAsActivity" /> @Html.DisplayNameFor(model => model.Gallery.UseAsActivity)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Gallery.Private" /> Make Picture Private
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Upload" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

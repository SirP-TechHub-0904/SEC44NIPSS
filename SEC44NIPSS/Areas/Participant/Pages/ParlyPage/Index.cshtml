@page
@model SEC44NIPSS.Areas.Participant.Pages.ParlyPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">
                    PRESIDENTIAL PARLEY REPORT RESOURCE MATERIALS
                </h3>
               
            </div>

            @if (TempData["result"] != null)
            {
                <div class="alert alert-success">
                    <strong>Success!</strong> @TempData["result"]
                </div>}

            <!-- /.box-header -->
            <div class="box-body">

                <div class="container">
                    <div class="card card-folders">

                        <!-- Folders Container -->
                        <div class="card-body" id="foldersGroup">

                            <div id="main-folders" class="d-flex align-items-stretch flex-wrap">
                                @foreach (var item in Model.ParlyReportCategory)
                                {
                                <a asp-page="/ParlyPage/Documents" asp-route-f1="@item.Id">
                                    <div class="d-inline-flex">
                                        <button class="folder-container">
                                            <div class="folder-icon">
                                                <i class="fa fa-folder folder-icon-color"></i>
                                            </div>
                                            <div class="folder-name" style="font-size:11px;">@Html.DisplayFor(modelItem => item.Title) </div>
                                        </button>
                                    </div>
                                </a>
                                }
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
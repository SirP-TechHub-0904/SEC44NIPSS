                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Profile.ProfileUpdatePictureFirstTime" /> @Html.DisplayNameFor(model => model.Profile.ProfileUpdatePictureFirstTime)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Profile.DontShow" /> @Html.DisplayNameFor(model => model.Profile.DontShow)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <img src="/Profile.AboutProfile" height="200" />

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-12">
                        <label>New Picture</label>
                        <input class="form-control" type="file" accept="image/*" name="filesPhoto" id="gallery-photo-add" />
                        <div class="gallery"></div>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Profile.Sent" /> @Html.DisplayNameFor(model => model.Profile.Sent)

                <input asp-for="Profile.PsNumber" class="form-control" />
                <span asp-validation-for="Profile.PsNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Profile.PsChange" /> @Html.DisplayNameFor(model => model.Profile.PsChange)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Profile.ChangeDate" class="control-label"></label>
                <input asp-for="Profile.ChangeDate" class="form-control" />

@page
@model SEC44NIPSS.Areas.NIPSS.Pages.Admin.CommitteeMembersModel

@{
    ViewData["Title"] = "CommitteeMembers";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">
           COMMITTEE MEMBERS FOR @Model.CommitteeCategory.Title
        </h3>

    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>S/N</th>

                    <th>
                        Fullname
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Study Group
                    </th>
                   
                    <th>Photo</th>
                </tr>
            </thead>
            @{
                int sno = 0;
            }

            <tbody>
                @foreach (var item in Model.Committee)
                {
                    <tr>
                        <td>
                            @{ sno++; }
                            @sno
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Profile.Title)

                            @Html.DisplayFor(modelItem => item.Profile.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Profile.StudyGroupMemeber.StudyGroup.Title)
                        </td>
                        <td>
                            <img src="@item.Profile.AboutProfile" height="30" />
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
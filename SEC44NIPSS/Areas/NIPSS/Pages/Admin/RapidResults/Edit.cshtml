            </div>
            <div class="form-group">
                <label asp-for="UserAnswer.Date" class="control-label"></label>
                <input asp-for="UserAnswer.Date" class="form-control" />
                <span asp-validation-for="UserAnswer.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAnswer.Score" class="control-label"></label>
                <input asp-for="UserAnswer.Score" class="form-control" />
                <span asp-validation-for="UserAnswer.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAnswer.QuestionNumber" class="control-label"></label>

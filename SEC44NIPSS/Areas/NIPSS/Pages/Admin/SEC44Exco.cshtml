@page
@model SEC44NIPSS.Areas.NIPSS.Pages.Admin.SEC44ExcoModel

@{
    ViewData["Title"] = "SEC44Exco";
}


<div class="box">
    <div class="box-header">
        <h3 class="box-title">
            @Model.Executive.Count() NIPSS EXECUTIVES
        </h3>

    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>S/N</th>
                    <th>
                        Fullname
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Email
                    </th>

                    <th>
                        Phone
                    </th>
                    <th>Study Group</th>
                    <th>Photo</th>
                </tr>
            </thead>
            @{
                int sno = 0;
            }

            <tbody>
                @foreach (var item in Model.Executive)
                {
                <tr>
                    <td>
                        @{ sno++; }
                        @sno
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Profile.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)

                        @Html.DisplayFor(modelItem => item.Profile.User.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profile.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Profile.StudyGroupMemeber.StudyGroup.Title)
                    </td>
                    <td>
                        <img src="@item.Profile.AboutProfile" height="50" />
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
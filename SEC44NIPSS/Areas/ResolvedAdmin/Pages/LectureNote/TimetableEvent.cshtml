@page
@model SEC44NIPSS.Areas.ResolvedAdmin.Pages.LectureNote.TimetableEventModel

@{
    ViewData["Title"] = "TimetableEvent";
}

<div class="card-body">
    <h4>TIME TABLE</h4>
    <hr />
    <div class="table-responsive">

        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].EventDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].EventTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].SortOrder)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].Content)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].Moderator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].Lecturer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].Module)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].EventType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].ContentStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].ContentType)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.Event[0].IsLecture)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @{ int sn = 0;}
            <tbody>
                @foreach (var item in Model.Event)
                {
                <tr>
                    <td>
                        @{ sn++;}
                        @sn
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SortOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.Raw(item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Moderator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lecturer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Module)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContentStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContentType)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.IsLecture)
                        @if(item.IsLecture == true)
                {
                        <span>true</span>
                }
                else
                {
                        <span>false</span>
                }
                    </td>
                    <td>

                        <div class="btn-group">
                            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                                Action
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-page="./Edit" asp-route-id="@item.Id">Edit</a></li>
                                <li><a asp-page="./Details" asp-route-id="@item.Id">Details</a></li>
                                <li><a asp-page="./Delete" asp-route-id="@item.Id">Delete</a></li>


                            </ul>
                        </div>


                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@page
@model SEC44NIPSS.Areas.Root.Pages.ExecutivePage.UpdateExecutiveModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Add Executive to @TempData["title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Executive.AlumniId" value="@TempData["id"]" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Executive.Position" class="control-label"></label>
                <input asp-for="Executive.Position" class="form-control" />
                <span asp-validation-for="Executive.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Executive.SortOrder" class="control-label"></label>
                <input asp-for="Executive.SortOrder" class="form-control" />
                <span asp-validation-for="Executive.SortOrder" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Executive.Manifesto" class="control-label"></label>
                <textarea asp-for="Executive.Manifesto" class="form-control"></textarea>
                <span asp-validation-for="Executive.Manifesto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Executive.ProfileId" class="control-label"></label>
                <select asp-for="Executive.ProfileId" class="form-control" asp-items="ViewBag.ProfileId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="update" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

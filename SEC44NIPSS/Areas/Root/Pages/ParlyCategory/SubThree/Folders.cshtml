@page
@model SEC44NIPSS.Areas.Root.Pages.ParlyCategory.SubThree.FoldersModel

@{
    ViewData["Title"] = "Folders";
}

<h2> <a asp-page="/ParlyCategory/SubTwo/Folders" asp-route-id="@Model.ParlySubTwoCategory.ParlyReportSubCategoryId"> @Model.ParlySubTwoCategory.ParlyReportSubCategory.Title</a> > @Model.ParlySubTwoCategory.Title</h2>

<p>
    <a asp-page="Create" class="btn btn-danger" asp-route-id="@Model.ParlySubTwoCategory.Id">Create New Folder</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Sort Order</th>
            <th>
                @Html.DisplayNameFor(model => model.ParlySubThreeCategory[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParlySubThreeCategory[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParlySubThreeCategory[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParlySubThreeCategory[0].ParlySubTwoCategory)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ParlySubThreeCategory)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SortOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParlySubTwoCategory.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>

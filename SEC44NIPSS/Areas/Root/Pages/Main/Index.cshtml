@page
@model SEC44NIPSS.Areas.Root.Pages.Main.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="box">
    <div class="box-header">
        <h2 class="box-title" style="text-align:center;font-weight:900;text-transform:uppercase;font-size:30px;">
            @Model.Alumni.Title.ToUpper() DASHBOARD
        </h2>
    </div>
    <div class="box-body">

        <div class="row">
            <h3 style="font-size: 19px;    margin-left: 15px;    font-weight: 900;">
                STATISTICS
            </h3>
            <div class="clearfix"></div>
            <div class="col-md-4">
                <!-- small box -->
                <div class="small-box bg-black">
                    <div class="inner">
                        <a asp-page="">
                            <h3>@Model.TotalParticipant</h3>
                        </a>

                        <p>Participant</p>
                    </div>

                    <a asp-page="/Dashboard/ParticipantList" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-md-4">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <a asp-page="">
                            <h3>@Model.Male</h3>
                        </a>

                        <p>MALE</p>
                    </div>

                    <a asp-page="/Dashboard/ParticipantList" asp-route-gender="male" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-md-4">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <a asp-page="">
                            <h3>@Model.Female</h3>
                        </a>

                        <p>FEMALE</p>
                    </div>

                    <a asp-page="/Dashboard/ParticipantList" asp-route-gender="female" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>


        </div>

        <div class="row">
            <div class="box-header">
               
                    <h3 class="box-title" style="font-size: 19px;    margin-left: 15px;    font-weight: 900;">
                        DOCUMENTS</h3>
                </div>
            <div class="clearfix"></div>
            <div class="col-md-4">

                <!-- small box -->
                <div class="small-box bg-black">
                    <div class="inner">
                        <a asp-page="/LectureNote/Index">
                            <h3>LECTURE NOTES</h3>
                        </a>
                        <p>PDFs/DOCs/Powerpoint</p>

                    </div>

                    <a asp-page="/LectureNote/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            @foreach(var item in Model.ParlyReportCategories){
            <div class="col-md-4">

                   <!-- small box -->
                <div class="small-box @item.BgColor">
                    <div class="inner">
                        <a asp-page="./InnerFolderTwo" asp-route-id="@item.Id">
                                <h3>@item.Title.ToUpper()</h3>
                        </a>

                        <p>@item.ParlyReportSubCategories.Count() Folders / @item.ParlyReportDocuments.Count() Docs</p>
                    </div>

                        <a asp-page="./InnerFolderTwo" asp-route-id="@item.Id" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        
            }
        </div>

